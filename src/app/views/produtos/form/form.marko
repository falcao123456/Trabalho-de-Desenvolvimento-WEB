<html>
    <head>
    
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="cs.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="icon" href="./estatico/images/Logosm.png">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <title>Cadastrar Produtos - Dorgasil</title>
        <script src="script.js" defer></script>
    </head>
    <body>
        <header class="row cornav">
            <nav class="col-md-2 cora pb-md-5 border border-dark shadow-lg p-3 mb-5 bg-white rounded-bottom">
          
          <img class="media mx-auto d-block img-fluid " src="./estatico/images/LOGO.png" alt="Logo Imagem" style="width:200px;height:90px;">
         <ul class="row nav-pills nav-fill ">
          <a class="nav-link text-dark" href="./produtos/lista/lista.marko">Produtos</a>
          <a class="nav-link text-dark" href="./funcionarios/lista/lista.marko">Funcionarios</a>
          <a class="nav-link text-dark" href="./produtos/form/form.marko">Cadastro de Produto</a>
          <a class="nav-link text-dark" href="./funcionarios/form/form.marko">Cadastro de Funcionarios</a>
          </ul>
        </nav>
      </header>

        <h1>Cadastro de Produtos</h1>
        <form action="/produtos" method="post">
            
            <if(data.produto.id)>
            <section>
                <input type="hidden" name="_method" value="put">
            </section>
            </if>

            <input type="hidden" id="id" name="id" value="${data.produto.id}" />
            <section>
                <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" placeholder="Nome do Medicamento" required name="nome">
                    <span  class="error"></span>
            </section>
            <section>
                <label for="laboratorio">Laboratorio</label>
                <input type="text" class="form-control" id="laboratorio" name="laboratorio" placeholder="Laboratorio do Medicamento" required>
                <span  class="error"></span>
            </section>
            <section>
                <label for="preco">Preço</label>
                <input type="number" class="form-control" id="preco" name="preco" placeholder="9,99" required>
                <span class="error"></span>
            </section>
            <section>
                <label for="descricao">Descrição</label>
                <textarea type="text" class="form-control" id="descricao" name="descricao" rows="3" placeholder="Descrição" required></textarea>
                <span class="error"></span>
            </section>
            <section>
                <label for="numerodoproduto">numerodoproduto:</label>
                <input type="number" id="numerodoproduto" name="numerodoproduto" placeholder="Ex.: 16"/>
                <span class="error"></span>
            </section>
            <section>
                <label for="descricao">Descricao:</label>
                <textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="digite a descricao do produto"> ${data.produto.descricao} </textarea>
                <span class="error"></span>
            </section>
            <section>
                <label for="quantidade">Quantidade</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" placeholder="Exemplo: 2" required>
                <span class="error"></span>
            </section>
            <button type="submit" class="btn btn-block btn-success">Cadastrar</button>
        </form>
    </body>
</html>
