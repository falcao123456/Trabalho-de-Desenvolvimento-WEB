<html>
    <body>
        <h1>Cadastro de livros</h1>
        <form action="/livros" method="post">
            <if(data.livro.id)>
            <section>
                <input type="hidden" name="_method" value="put">
            </section>
            </if>

            <input type="hidden" id="id" name="id" value="${data.livro.id}" />
            <section>
                <label for="titulo">Titulo:</label>
                <input type="text" id="titulo" name="titulo" value="${data.livro.titulo}"  placeholder="digite o titulo do livro"/>
            </section>
            <section>
                <label for="autor">Autor:</label>
                <input type="text" id="autor" name="autor" value="${data.livro.autor}"  placeholder="digite o autor do livro"/>
            </section>
            <section>
                <label for="preco">Pre√ßo:</label>
                <input type="number" id="preco" name="preco" value="${data.livro.preco}"  placeholder="digite o preco do livro"/>
            </section>
            <section>
                <label for="descricao">Descricao:</label>
                <textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="digite a descricao do livro"> ${data.livro.descricao} </textarea>
            </section>
            <input type="submit" value="Salvar" />
        </form>
    </body>
</html>
