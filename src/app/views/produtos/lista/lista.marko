            <h1>Listagem de Produtos</h1>
            <table id="produtos" class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Laboratorio</th>
                    <th>Preco</th>
                    <th>Cod</th>
                    <th>Quantidade</th>
                    <th>Editar</th>
                    <th>Remover</th>
                </tr>

                <for|item| of=data.produtos>
                    <tr id="produto_${item.id}">
                        <td>${item.id}</td>
                        <td>${item.titulo}</td>
                        <td>${item.autor}</td>
                        <td>${item.preco}</td>
                        <td>${item.descricao}</td>
                        <td><a href="/livros/form/${item.id}" data-type="editar">Editar</a></td>
                        <td><a href="#" data-ref="${item.id}" data-type="remocao">Remover</a></td>
                        <td></td>
                    </tr>
                </for>
            </table>
            <script src="./estatico/js/remove-livro.js">
            </script>
        </body>
